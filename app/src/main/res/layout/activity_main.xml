<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text">

    <io.codetail.widget.RevealFrameLayout
        android:id="@+id/container_frame"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="53dp"
            android:background="@mipmap/plano3">

            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.26" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.379" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.256" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.609" />

            <include
                android:id="@+id/pentagon1"
                layout="@layout/pentagon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                app:layout_constraintBottom_toTopOf="@+id/guidelineHor1"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVer2"
                app:layout_constraintStart_toStartOf="@+id/guidelineVer"
                app:layout_constraintTop_toTopOf="@+id/guidelineHor" />


            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.125" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.175" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.41" />


            <include
                android:id="@+id/vertical_left_1"
                layout="@layout/vertical_left_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guidelineHor4"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVer4"
                app:layout_constraintStart_toStartOf="@+id/guidelineVer3"
                app:layout_constraintTop_toTopOf="@+id/guidelineHor3" />


            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <include
                android:id="@+id/vertical_left_2"
                layout="@layout/vertical_left_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guidelineHor8"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVer4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guidelineVer3"
                app:layout_constraintTop_toTopOf="@+id/guidelineHor7"
                app:layout_constraintVertical_bias="0.625" />


            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.479" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.532" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.205" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.385" />

            <include
                android:id="@+id/vertical_central_left"
                layout="@layout/vertical_center_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/guidelineHor6"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVer6"
                app:layout_constraintStart_toStartOf="@+id/guidelineVer5"
                app:layout_constraintTop_toTopOf="@+id/guidelineHor5" />


            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.66" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.52" />

            <include
                android:id="@+id/vertical_left_3"
                layout="@layout/vertical_left_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guidelineHor9"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVer4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guidelineVer3"
                app:layout_constraintTop_toTopOf="@+id/guidelineHor10"
                app:layout_constraintVertical_bias="0.35" />


            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.885" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.935" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.29" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.475" />

            <include
                android:id="@+id/vertical_right"
                layout="@layout/vertical_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/guidelineHor12"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVer8"
                app:layout_constraintStart_toStartOf="@+id/guidelineVer7"
                app:layout_constraintTop_toTopOf="@+id/guidelineHor11" />


            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.275" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.464" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.125" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.18" />


            <include
                android:id="@+id/diagonal_left"
                layout="@layout/diagonal_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/guidelineHor14"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVer10"
                app:layout_constraintStart_toStartOf="@+id/guidelineVer9"
                app:layout_constraintTop_toTopOf="@+id/guidelineHor13" />


            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.58" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineVer12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.88" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.17" />

            <android.support.constraint.Guideline
                android:id="@+id/guidelineHor16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.25" />


            <include
                android:id="@+id/diagonal_right"
                layout="@layout/diagonal_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/guidelineHor16"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVer12"
                app:layout_constraintHorizontal_bias="0.736"
                app:layout_constraintStart_toStartOf="@+id/guidelineVer11"
                app:layout_constraintTop_toTopOf="@+id/guidelineHor15"
                app:layout_constraintVertical_bias="0.6" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="200dp"
                    android:layout_marginLeft="168dp"
                    android:layout_marginStart="168dp"
                    android:src="@drawable/pc_off"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/pubg_font5"
                    android:text="Ocupado"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="168dp"
                    android:layout_marginLeft="168dp"
                    android:layout_marginStart="168dp"
                    android:src="@drawable/pc"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/pubg_font5"
                    android:text="Disponible"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/pubg_font5"
                    android:text="El estado de los equipos se actualiza cada 3 minutos"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:layout_constraintVertical_bias="0.086" />


            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/black"
            app:titleTextColor="@color/colorPrimary"
            android:theme="@style/AppTheme.NoActionBar" />

    </io.codetail.widget.RevealFrameLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:layout_width="@dimen/sliding_menu_width"
        android:layout_height="match_parent"
        android:layout_gravity="start|bottom">

        <LinearLayout
            android:id="@+id/left_drawer"
            android:orientation="vertical"
            android:layout_width="@dimen/sliding_menu_width"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:background="@android:color/transparent">
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>